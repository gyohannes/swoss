<div class="card shadow mb-4">
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h6 class="m-0 font-weight-bold text-primary">Diagnoses</h6>
  </div>
  <!-- Card Body -->
  <div class="card-body">
    <table class="table table-bordered dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @anesthesia_types.each do |anesthesia_type| %>
      <tr>
        <td><%= anesthesia_type.name %></td>
        <td><%= anesthesia_type.description %></td>
        <td>
          <%= link_to 'Edit', edit_anesthesia_type_path(anesthesia_type) %> | 
          <%= link_to 'Delete', anesthesia_type, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr/>
<%= link_to 'New Anesthesia Type', new_anesthesia_type_path, class: 'btn btn-primary' %>
</div>
</div>