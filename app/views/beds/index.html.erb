<div class="card shadow mb-4">
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h6 class="m-0 font-weight-bold text-primary">Beds</h6>
  </div>
  <!-- Card Body -->
  <div class="card-body">
    <table class="table table-bordered dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Ward</th>
      <th>Block</th>
      <th>Floor</th>
      <th>Bed number</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @beds.each do |bed| %>
      <tr>
        <td><%= bed.ward %></td>
        <td><%= bed.block %></td>
        <td><%= bed.floor %></td>
        <td><%= bed.bed_number %></td>
        <td><%= bed.bed_status %></td>
        <td>
          <%= link_to 'Edit', edit_bed_path(bed) %> |
          <%= link_to 'Delete', bed, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  <hr/>
<%= link_to 'Add Bed', new_bed_path, class: 'btn btn-primary' %>
  </div>
</div>