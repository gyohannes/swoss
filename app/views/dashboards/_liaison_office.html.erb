<div class="row">
<div class="card shadow mb-4 col-sm-6">
  <div class="card-body row">
<table class="table-responsive" width="100%">
  <tr>
    <td>
      <table class="table table-responsive table-bordered" width="100%">
        <% Constants::PATIENT_STATUS.each do |s| %>
          <tr>
            <th>
              <center>
              <%= Admission.waiting_total(s) %><br/>
                Total <%= s %>
              </center>
            </th>
          </tr>
        <% end %>
      </table>
    </td>
    <td>
      <table class="table table-bordered" width="100%">
        <thead>
        <tr>
          <th>Procedure Category</th>
          <th>Department</th>
          <% Constants::PATIENT_STATUS.each do |s| %>
              <th><%= s %></th>
          <% end %>
        </tr>
        </thead>
        <% @procedure_categories.each do |pc| %>
            <tr>
            <td rowspan="<%= Department.count %>"><%= pc %></td>
          <% Department.all.each do |d| %>
              <td><%= d %></td>
              <% Constants::PATIENT_STATUS.each do |s| %>
                <th><%= d.category_waiting_total(s, pc.id) %></th>
              <% end %>
            </tr>
        <% end %>
        <% end %>
      </table>
    </td>
  </tr>
</table>
  </div>
</div>
<div class="card shadow mb-4 col-sm-6">
  <div class="card-body">
    <legend>Backlog</legend>
    <table class="table table-striped" width="100%">
      <thead>
      <tr>
        <th>Department</th>
        <th>Backlog</th>
      </tr>
      </thead>
      <% total = 0 %>
      <% Department.all.map do |d| %>
          <tr>
            <th><%= d %></th>
            <th><%= dt = d.missing_total %></th>
            <% total += dt %>
          </tr>
      <% end %>
      <tr>
        <th class="text-center">Total</th>
        <th><%= total %></th>
      </tr>
    </table>
  </div>
</div>
</div>
  <%= line_chart patients_by_status_by_month_admissions_path, defer: true, title: 'Surgical Waitlist over the last 12 months', colors: ["#0000FF", "#008000", "#FF0000"] %>