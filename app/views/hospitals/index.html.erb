<div class="card shadow mb-4">
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h6 class="m-0 font-weight-bold text-primary">Users</h6>
  </div>
  <!-- Card Body -->
  <div class="card-body">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Name</th>
      <th>Administration Unit</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.name %></td>
        <td><%= hospital.administration_unit %></td>
        <td><%= link_to 'Edit', edit_hospital_path(hospital) %> |
          <%= link_to 'Delete', hospital, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Hospital', new_hospital_path, class: 'btn btn-primary' %>
  </div>
</div>