<div class="card shadow mb-4">
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h6 class="m-0 font-weight-bold text-primary">OR Blocks</h6>
  </div>
  <!-- Card Body -->
  <div class="card-body">
    <table class="table table-bordered dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @or_blocks.each do |or_block| %>
      <tr>
        <td><%= or_block.name %></td>
        <td><%= link_to 'Edit', edit_or_block_path(or_block), class: 'btn btn-primary' %>
          <%= link_to 'Delete', or_block, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add OR Block', new_or_block_path, class: 'btn btn-primary' %>
  </div>
</div>
