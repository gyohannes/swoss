<table class="table table-striped table-responsive">
  <thead>
  <tr>
    <th>MRN</th>
    <th>Name</th>
    <th>Sex</th>
    <th>Age</th>
    <th>Address</th>
    <th>Contact Name and Address</th>
    <th>Diagnosis</th>
    <th>Procedure</th>
    <th>Priority</th>
    <th>Admitting Physician</th>
    <th>Admitting Department</th>
    <th>Addmission Date</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @admissions.each do |a| %>
      <tr>
        <td><%= link_to a.patient.mrn, a.patient %></td>
        <td><%= a.patient.full_name %></td>
        <td><%= a.patient.sex %></td>
        <td><%= a.patient.age %></td>
        <td><%= a.patient.address %></td>
        <td><%= a.patient.contact_name_and_address %></td>
        <td><%= a.diagnosis %></td>
        <td><%= a.procedure %></td>
        <td><%= a.priority_status %></td>
        <td><%= a.physician %></td>
        <td><%= a.department %></td>
        <td><%= a.admission_date %></td>
        <td>
          <% unless a.or_schedule %>
            <%= link_to 'Schedule', new_or_schedule_path(admission: a.id), class: 'btn btn-primary' %>
          <% else %>
            <button class="btn btn-success">Scheduled</button>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>