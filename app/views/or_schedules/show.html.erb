<div class="card shadow mb-4">
  <!-- Card Body -->
  <div class="card-body row">
    <table class="table col-sm-6">
      <tr>
        <th>Patient</th>
        <td><%= @or_schedule.admission.patient %></td>
      </tr>

      <tr>
        <th>Procedure type</th>
        <td><%= @or_schedule.procedure_type %></td>
      </tr>

      <tr>
        <th>Surgeon</th>
        <td><%= @or_schedule.surgeon %></td>
      </tr>

      <tr>
        <th>Assisstant Surgeons</th>
        <td>
          <% @or_schedule.assisstant_surgeons.each do |as| %>
              <li><%= as %></li>
          <% end %>
        </td>
      </tr>

      <tr>
        <th>Blood units required</th>
        <td><%= @or_schedule.blood_units_required %></td>
      </tr>

      <tr>
        <th>OR Block</th>
        <td><%= @or_schedule.or_block %></td>
      </tr>

      <tr>
        <th>OR Table</th>
        <td><%= @or_schedule.or_table %></td>
      </tr>
    </table>
    <table class="table col-sm-6">

      <tr>
        <th>Anesthesian:</th>
        <td><%= @or_schedule.anesthesian %></td>
      </tr>

      <tr>
        <th>Scrub nurse:</th>
        <td><%= @or_schedule.scrub_nurse %></td>
      </tr>

      <tr>
        <th>Circulating nurse:</th>
        <td><%= @or_schedule.circulating_nurse %></td>
      </tr>

      <tr>
        <th>Scheduled date:</th>
        <td><%= @or_schedule.scheduled_date %></td>
      </tr>

      <tr>
        <th>Scheduled time:</th>
        <td><%= @or_schedule.scheduled_time.strftime("%I:%M %p") rescue nil %></td>
      </tr>

      <tr>
        <th>Schedule order:</th>
        <td><%= @or_schedule.schedule_order %></td>
      </tr>
    </table>
    <hr/>
<%= link_to 'Edit', edit_or_schedule_path(@or_schedule) %> |
<%= link_to 'Back', or_schedules_path %>
  </div>
</div>