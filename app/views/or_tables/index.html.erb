<div class="card shadow mb-4">
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h6 class="m-0 font-weight-bold text-primary">OR Tables</h6>
  </div>
  <!-- Card Body -->
  <div class="card-body">
    <table class="table table-bordered dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>OR Block</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @or_tables.each do |or_table| %>
      <tr>
        <td><%= or_table.name %></td>
        <td><%= or_table.code %></td>
        <td><%= or_table.or_block %></td>
        <td>
          <%= link_to 'Edit', edit_or_table_path(or_table) %> |
          <%= link_to 'Remove', or_table, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Or Table', new_or_table_path, class: 'btn btn-primary' %>
  </div>
</div>