<table class="table table-striped table-responsive dataTable">
  <thead>
    <tr>
      <th></th>
      <th>MRN</th>
      <th>First name</th>
      <th>Father name</th>
      <th>Grand father name</th>
      <th>Date of Birth</th>
      <th>Sex</th>
      <th>Phone</th>
      <th>Region</th>
      <th>Zone/Sub City</th>
      <th>Woreda</th>
      <th>Kebelle</th>
      <th>House Number</th>
      <th>Contact Person</th>
      <th>Contact Person Phone</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= image_tag 'not_completed.jpg', height: '35px' if patient.admissions.blank? %></td>
        <td><%= link_to patient.mrn, patient %></td>
        <td><%= patient.first_name %></td>
        <td><%= patient.father_name %></td>
        <td><%= patient.grand_father_name %></td>
        <td><%= patient.date_of_birth %></td>
        <td><%= patient.sex %></td>
        <td><%= patient.primary_telephone_number %></td>
        <td><%= patient.region %></td>
        <td><%= patient.zone %></td>
        <td><%= patient.woreda %></td>
        <td><%= patient.kebele %></td>
        <td><%= patient.house_number %></td>
        <td><%= patient.name_of_contact_person %></td>
        <td><%= patient.contact_person_telephone_number %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-primary' if can? :edit, patient %>
          <%= link_to 'Remove', patient, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, patient %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>