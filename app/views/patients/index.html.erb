<div class="card shadow mb-4">
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h4>Search / Register Patient</h4>
  </div>
  <div class="card-body">
    <%= simple_form_for :patient_search, url: create_from_search_patients_path do |f| %>
            <div class="row">
                <div class="col-sm-9">
                  <div class="row">
                    <div class='col-sm-6'>
                        <%= f.input :MRN, label: false, placeholder: 'MRN' %>
                        <%= f.input :phone_number, label: false, placeholder: 'Phone Number' %>
                    </div>
                      <div class='col-sm-6'>
                        <%= f.input :first_name, label: false, placeholder: 'First Name' %>
                        <%= f.input :father_name, label: false, placeholder: 'Father Name' %>
                        <%= f.input :grand_father_name, label: false, placeholder: 'Grand Father Name' %>
                      </div>
                  </div>
                </div>
                <div class="col-sm-3">
                  <div class="form-actions">
                  <%= f.button :submit, 'Reset Form', type: 'reset', class: 'btn btn-light' %><br/><br/>
                    <%= f.button :submit, 'Register New Patient', class: 'btn btn-primary btn-raised' %>

                  </div>
                </div>
            </div>
    <% end %>
    <br/>
          <div id="patients_list">
            <%= render 'patients' %>
          </div>
</div>
</div>
