<div class="card shadow mb-4">
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h4>Shortlist</h4>
  </div>
  <!-- Card Body -->
  <div class="card-body">
    <table class="table table-striped table-condensed table-responsive dataTable">
      <thead>
      <tr>
        <th>MRN</th>
        <th>Name</th>
        <th>Sex</th>
        <th>Age</th>
        <th>Telephone Number</th>
        <th>Diagnosis</th>
        <th>Procedure</th>
        <th>Priority</th>
        <th>Admission Date</th>
        <th>Bed Number</th>
      </tr>
      </thead>

      <tbody>
      <% @admissions.each do |a| %>
          <tr>
            <td><%= link_to a.patient.mrn, a.patient %></td>
            <td><%= a.patient.full_name %></td>
            <td><%= a.patient.sex %></td>
            <td><%= set_age(a.patient.date_of_birth) %></td>
            <td><%= a.patient.primary_telephone_number %></td>
            <td><%= a.diagnosis %></td>
            <td><%= a.procedure %></td>
            <td><%= a.priority_status %></td>
            <td><%= a.admission_date %></td>
            <td><%= a.bed %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>