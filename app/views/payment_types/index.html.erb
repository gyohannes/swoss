<div class="card shadow mb-4">
<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
  <h6 class="m-0 font-weight-bold text-primary">Payment Types</h6>
</div>
<!-- Card Body -->
<div class="card-body">
  <table class="table table-bordered dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_types.each do |payment_type| %>
      <tr>
        <td><%= payment_type.name %></td>
        <td><%= link_to 'Edit', edit_payment_type_path(payment_type) %> |
          <%= link_to 'Remove', payment_type, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Payment Type', new_payment_type_path, class: 'btn btn-primary' %>
</div>
</div>