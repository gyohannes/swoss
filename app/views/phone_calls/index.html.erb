<p id="notice"><%= notice %></p>

<h1>Phone Calls</h1>

<table>
  <thead>
    <tr>
      <th>Admission</th>
      <th>Patient response</th>
      <th>Information</th>
      <th>Action</th>
      <th>New appointment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phone_calls.each do |phone_call| %>
      <tr>
        <td><%= phone_call.admission %></td>
        <td><%= phone_call.patient_response %></td>
        <td><%= phone_call.information %></td>
        <td><%= phone_call.action %></td>
        <td><%= phone_call.new_appointment %></td>
        <td><%= link_to 'Show', phone_call %></td>
        <td><%= link_to 'Edit', edit_phone_call_path(phone_call) %></td>
        <td><%= link_to 'Destroy', phone_call, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

