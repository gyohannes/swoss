<div class="card shadow mb-4">
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h4>Surgical Service Report</h4>
  </div>
  <!-- Card Body -->
  <div class="card-body">
    <%= simple_form_for :report, autocomplate: 'off' do |f| %>
        <div class="row">
        <div class="col-lg-3">
          <%= f.input :from, input_html: {class: 'report_ethiopian_date_picker'} %>
        </div>
        <div class="col-lg-3">
          <%= f.input :to, input_html: {class: 'report_ethiopian_date_picker'} %>
        </div>
        </div>
    <% end %>
    <br/>
    <div id="surgical_service_report">
      <%= render partial: '/report/surgical_service' %>
    </div>
  </div>
</div>