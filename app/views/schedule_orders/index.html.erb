<div class="card shadow mb-4">
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h6 class="m-0 font-weight-bold text-primary">Schedule Orders</h6>
  </div>
  <!-- Card Body -->
  <div class="card-body">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @schedule_orders.each do |schedule_order| %>
      <tr>
        <td><%= schedule_order.name %></td>
        <td><%= link_to 'Edit', edit_schedule_order_path(schedule_order) %> |
          <%= link_to 'Remove', schedule_order, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedule Order', new_schedule_order_path, class: 'btn btn-primary' %>
  </div>
</div>