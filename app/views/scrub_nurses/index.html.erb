<div class="card shadow mb-4">
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h6 class="m-0 font-weight-bold text-primary">Scrub Nurses</h6>
  </div>
  <!-- Card Body -->
  <div class="card-body">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Name</th>
      <th>Hospital</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @scrub_nurses.each do |scrub_nurse| %>
      <tr>
        <td><%= scrub_nurse.name %></td>
        <td><%= scrub_nurse.hospital %></td>
        <td><%= link_to 'Edit', edit_scrub_nurse_path(scrub_nurse) %> |
          <%= link_to 'Remove', scrub_nurse, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Scrub Nurse', new_scrub_nurse_path, class: 'btn btn-primary' %>
  </div>
</div>