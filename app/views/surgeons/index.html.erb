<div class="card shadow mb-4">
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h6 class="m-0 font-weight-bold text-primary">Surgeons</h6>
  </div>
  <!-- Card Body -->
  <div class="card-body">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Name</th>
      <th>Occupation Group</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @surgeons.each do |surgeon| %>
      <tr>
        <td><%= surgeon.name %></td>
        <td><%= surgeon.occupation_group %></td>
        <td><%= link_to 'Edit', edit_surgeon_path(surgeon) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Surgeon', new_surgeon_path, class: 'btn btn-primary' %>
  </div>
</div>