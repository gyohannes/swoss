<div class="row">
  <div class="col-lg-12">
    <div class="p-5">
      <div class="text-center">
        <h1 class="h4 text-gray-900 mb-2">Forgot Your Password?</h1>
        <p class="mb-4">Enter your email address below and we'll send you a link to reset your password!</p>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'user' }) do |f| %>
          <%= f.error_notification %>
          <div class="form-group">
            <%= f.input :email, label: false, required: true, autofocus: true, placeholder: "Enter Email Address...", input_html: { autocomplete: "email",class: "form-control form-control-user" } %>
            <%= f.button :submit, "Reset Password", class: "btn btn-primary btn-user btn-block" %>
          </div>
      <% end %>
      <hr>
      <div class="text-center">
        <%= link_to "Log in", new_session_path(resource_name), class: "small" %>
      </div>
    </div>
  </div>
</div>