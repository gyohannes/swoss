        <div class="row">
          <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
          <div class="col-lg-6">
            <div class="p-5">

              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'user'}) do |f| %>
                  <div class="form-group">
                    <%= f.text_field :user_name, class: "form-control form-control-user", placeholder:"Enter User Name", required: true, autofocus: true %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, class: "form-control form-control-user", placeholder:"Passworde", required: true, autofocus: true %>
                  </div>

                  <div class="form-group">
                    <div class="custom-control custom-checkbox small">
                      <%= f.check_box :remember_me, name: "rememberme", id: "customCheck", class: "custom-control-input" %>
                      <label class="custom-control-label" for="customCheck">Remember Me</label>
                    </div>
                  </div>

                    <%= f.submit "Login",class: "btn btn-primary btn-user btn-block"  %>
              <% end %>
              <hr>
              <div class="text-center">
                <%= link_to "Forgot Password?", new_user_password_path, class: 'small' %>
              </div>
            </div>
          </div>
        </div>
